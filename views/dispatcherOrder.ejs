<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/jquery.maskedinput.min.js"></script>
		<script type="text/javascript" src="https://maps.google.com/maps/api/js?key=AIzaSyBFYTDI_36YLdfgadX1NrePYwItWuR8Lvc"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
		<header>
                <nav>	
                    <ul>
                        <li><a href="/driverList">Список водителей</a></li>
                        <li><a id="exit">Выйти</a></li>
                    </ul>
                </nav>
            </header>
	<div id="map"> 
    </div>
	<div id="order-taxi">
<table id='order-table'>
 <tr>
	<td><input id="start" name="start" type="textbox" value="Откуда"/></td>
	<td><input id="end" name="end" type="textbox" value="Куда"/></td>
</tr>
<tr>
	<td>Время заказа:<input id="arrivalTime" type="time" name="arrival_time" max="23:59"></td>
	<td><input id="phone"  type="tel" name="phone" value="Телефон"/></td>
</tr>
<tr>
	<td>Дополнительные услуги:</td>
</tr>
<tr>
	<td><input id="childbox" type="checkbox" name="child"  value="true"/><label for="childbox"><span></span>Детское кресло</label><br/>
	<input id="animalbox" type="checkbox" name="animal" value="true"/><label for="animalbox"><span></span>Перевозка животного</label></td>
	<td></td>
</tr>
<tr>
	<td colspan="2">
			Комментарий к заказу:<br/>
		<textarea></textarea>
	</td>
</tr>
<tr>
	<td>
		<select id="tariff">
			<option selected value='1'>
				Эконом от 45 рублей
			</option>
			<option value='5'>
				Комфорт от 56 рублей
			</option>
		</select>
	</td>
	<td id="price"></td>
	<td id="tripinfo"></td>
</tr>
<tr>
		<td><button id="orderBtn">Заказать</button></td>
		<td><button id="prepareBtn">Рассчитать</button></td>
</tr>
</table>
<!--<form style="text-align:left" onsubmit="alert('Заказ оформлен!');"></form>-->
	</div>
	<!--<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBFYTDI_36YLdfgadX1NrePYwItWuR8Lvc"></script>-->
	<script src="/javascripts/form-controller.js"></script>
	<script src="/javascripts/map-controller.js"></script>
	<script>
	$("#phone").mask("8(999)999-99-99", { completed: function () { } });
	$("#exit").click(function(){
    $.post('/driverList',{
    exit:true
    }, function(data){
        console.log(data);
        if(data.status=="OK"){
        alert("Вы успешно вышли!");
		document.location.href = "/dispatcher";
		
        }else{
            alert("Что-то пошло не так, попробуйте еще раз!");
        }
    });
    });
	</script>
  </body>
</html>
