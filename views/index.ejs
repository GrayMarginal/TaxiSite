    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <%-partial('partials/header')%>
	<div id="map"> 
    </div>
	<div id="order-taxi">
<table id='order-table'>
 <tr>
	<td><input id="start" name="start" type="textbox" placeholder="Откуда" value=""/></td>
	<td><input id="end" name="end" type="textbox" placeholder="Куда" value="" /></td>
</tr>
<tr>
	<td>Время заказа:<input id="arrivalTime" type="time" name="arrival_time" max="23:59"></td>
	<td><input id="phone"  type="tel" name="phone" placeholder="Телефон" value=""/></td>
</tr>
<tr>
	<td>Дополнительные услуги:</td>
</tr>
<tr>
	<td><input id="childbox" type="checkbox" name="child"  value="true"/><label for="childbox"><span></span>Детское кресло</label><br/>
	<input id="animalbox" type="checkbox" name="animal" value="true"/><label for="animalbox"><span></span>Перевозка животного</label></td>
	<td></td>
</tr>
<tr>
	<td colspan="2">
			Комментарий к заказу:<br/>
		<textarea id="comment"></textarea>
	</td>
</tr>
<tr>
	<td>
		<select id="tariff">
			<option selected value='1'>
				Эконом от 45 рублей
			</option>
			<option value='2'>
				Комфорт от 56 рублей
			</option>
		</select>
	</td>
	<td id="price"></td>
	<td id="tripinfo"></td>
</tr>
<tr id="pay">
	<td>
			<select id="payType">
					<option selected value='false'>
						Наличные
					</option>
					<option value='true'>
						Карта
					</option>
				</select>
	</td>
</tr>
<tr>
		<td><button id="orderBtn">Заказать</button></td>
		<td><button id="prepareBtn">Рассчитать</button></td>
</tr>
</table>
<div id="payCart" style="width:90%; background-color:white;position: absolute; left: 5%;top:20%;height:150px;border: solid 1px black;">
            <br/>
            <input id="cart" type="text" name="cart" placeholder="0000-0000-0000-0000" />
            <input id="cvc" type="text" name="cvc" placeholder="000" style="width:50px;"/><br/>
            <button id="payConfirm">Оплатить</button><button id="payCancel">Отмена</button>
        </div>
        <script>
        $("#payCart").hide();
		$("#cart").mask("9999-9999-9999-9999", { completed: function () { } });
            $("#cvc").mask("999", { completed: function () { } });
</script>
<!--<form style="text-align:left" onsubmit="alert('Заказ оформлен!');"></form>-->
	</div>
	<!--<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBFYTDI_36YLdfgadX1NrePYwItWuR8Lvc"></script>-->
			
	<script src="/javascripts/form-controller.js"></script>
	<script src="/javascripts/map-controller.js"></script>
  </body>
</html>
