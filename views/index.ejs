<form action="/order" method="POST" target="order" style="text-align:left" onsubmit="alert('Заказ оформлен!');">
<table id='order-table'>
 <tr style="text-align:center">
	<td><input id="start" name="start" type="textbox" value="Откуда"/></td>
	<td></td>
	<td><input id="end" name="end" type="textbox" value="Куда"/></td>
</tr>
<tr>
<td>Подъезд:<input name="entrance" type="number" value="1" min="1" max="6"></td>
<td><p id="tripinfo"></p></td>
<td><p id="triperror"></p></td>
</tr>
<tr>
	<td>Ваш телефон:</td>
	<td></td>
	<td><input id="phone"  type="textbox" name="phone" value="Телефон"/></td>
</tr>
<tr>
	<td>Время заказа:</td>
	<td></td>
	<td><input id="time" type="time" name="arrival_time" value="17:15" min="17:15" max="23:59"></td>
</tr>
<tr>
	<td>Дополнительные услуги:</td>
</tr>
